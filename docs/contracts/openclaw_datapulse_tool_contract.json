{
  "contract": {
    "project": "DataPulse",
    "project_zh": "数据脉搏",
    "version": "0.6.0",
    "scope": "cross-platform URL intake + confidence scoring + memory persistence",
    "targets": [
      "assistant-skill",
      "mcp",
      "agent",
      "bot"
    ]
  },
  "skill": {
    "entry_point": "datapulse_skill.run",
    "trigger_pattern": "(?i)(?:read|fetch|save|summary|summarize|extract|parse|/read|/save)\\s+https?://",
    "input": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string",
          "required": true,
          "description": "Raw text containing one or more URLs."
        }
      },
      "required": [
        "text"
      ]
    },
    "output": {
      "type": "string",
      "description": "Human-readable multi-line summary of processed items."
    }
  },
  "mcp": {
    "command": "python -m datapulse.mcp_server",
    "transport": "stdio",
    "tools": [
      {
        "name": "read_url",
        "description": "Parse and score a single URL.",
        "parameters": {
          "url": "string (required)",
          "min_confidence": "float (default 0.0)"
        }
      },
      {
        "name": "read_batch",
        "description": "Parse multiple URLs in parallel.",
        "parameters": {
          "urls": "array[string] (required)",
          "min_confidence": "float (default 0.0)"
        }
      },
      {
        "name": "query_inbox",
        "description": "Get stored memory records.",
        "parameters": {
          "limit": "int (default 20)",
          "min_confidence": "float (default 0.0)"
        }
      },
      {
        "name": "resolve_source",
        "description": "Resolve URL to source type/config hints.",
        "parameters": {
          "url": "string (required)"
        }
      },
      {
        "name": "list_sources",
        "description": "List configured sources from catalog.",
        "parameters": {
          "include_inactive": "bool (default false)",
          "public_only": "bool (default true)"
        }
      },
      {
        "name": "list_packs",
        "description": "List source packs.",
        "parameters": {
          "public_only": "bool (default true)"
        }
      },
      {
        "name": "list_subscriptions",
        "description": "List profile subscriptions (source IDs).",
        "parameters": {
          "profile": "string (default default)"
        }
      },
      {
        "name": "source_subscribe",
        "description": "Subscribe profile to source ID.",
        "parameters": {
          "profile": "string (required)",
          "source_id": "string (required)"
        }
      },
      {
        "name": "source_unsubscribe",
        "description": "Unsubscribe profile from source ID.",
        "parameters": {
          "profile": "string (required)",
          "source_id": "string (required)"
        }
      },
      {
        "name": "install_pack",
        "description": "Install source pack to profile.",
        "parameters": {
          "profile": "string (required)",
          "slug": "string (required)"
        }
      },
      {
        "name": "query_feed",
        "description": "Query feed items by subscription/source filters.",
        "parameters": {
          "profile": "string (default default)",
          "source_ids": "array[string] (optional)",
          "limit": "int (default 20)",
          "min_confidence": "float (default 0.0)",
          "since": "string ISO8601 (optional)"
        }
      },
      {
        "name": "build_json_feed",
        "description": "Build JSON Feed payload.",
        "parameters": {
          "profile": "string (default default)",
          "source_ids": "array[string] (optional)",
          "limit": "int (default 20)",
          "min_confidence": "float (default 0.0)",
          "since": "string ISO8601 (optional)"
        }
      },
      {
        "name": "build_rss_feed",
        "description": "Build RSS feed payload.",
        "parameters": {
          "profile": "string (default default)",
          "source_ids": "array[string] (optional)",
          "limit": "int (default 20)",
          "min_confidence": "float (default 0.0)",
          "since": "string ISO8601 (optional)"
        }
      },
      {
        "name": "build_atom_feed",
        "description": "Build Atom 1.0 feed payload.",
        "parameters": {
          "profile": "string (default default)",
          "source_ids": "array[string] (optional)",
          "limit": "int (default 20)",
          "min_confidence": "float (default 0.0)",
          "since": "string ISO8601 (optional)"
        }
      },
      {
        "name": "build_digest",
        "description": "Build curated digest with primary and secondary stories, multi-dimensional scoring, and diversity selection.",
        "parameters": {
          "profile": "string (default default)",
          "source_ids": "array[string] (optional)",
          "top_n": "int (default 3)",
          "secondary_n": "int (default 7)",
          "min_confidence": "float (default 0.0)",
          "since": "string ISO8601 (optional)"
        }
      },
      {
        "name": "mark_processed",
        "description": "Mark item as processed or unprocessed.",
        "parameters": {
          "item_id": "string (required)",
          "processed": "bool (default true)"
        }
      },
      {
        "name": "query_unprocessed",
        "description": "Query unprocessed items from inbox.",
        "parameters": {
          "limit": "int (default 20)",
          "min_confidence": "float (default 0.0)"
        }
      },
      {
        "name": "search_web",
        "description": "Search the web via Jina and return scored, LLM-friendly results.",
        "parameters": {
          "query": "string (required)",
          "sites": "array[string] (optional, restrict to domains)",
          "limit": "int (default 5)",
          "fetch_content": "bool (default true)",
          "min_confidence": "float (default 0.0)"
        }
      },
      {
        "name": "read_url_advanced",
        "description": "Read a URL with CSS selector targeting and advanced Jina options.",
        "parameters": {
          "url": "string (required)",
          "target_selector": "string (CSS selector, optional)",
          "wait_for_selector": "string (CSS selector, optional)",
          "no_cache": "bool (default false)",
          "with_alt": "bool (default false)",
          "min_confidence": "float (default 0.0)"
        }
      },
      {
        "name": "trending",
        "description": "Get X/Twitter trending topics for a location (powered by trends24.in).",
        "parameters": {
          "location": "string (default empty = worldwide, supports aliases: us, uk, jp, etc.)",
          "top_n": "int (default 20)",
          "store": "bool (default false, opt-in inbox persistence)"
        }
      },
      {
        "name": "detect_platform",
        "description": "Detect target platform from URL.",
        "parameters": {
          "url": "string (required)"
        }
      },
      {
        "name": "health",
        "description": "Return parser list and stored count.",
        "parameters": {}
      }
    ]
  },
  "agent": {
    "class": "datapulse.agent.DataPulseAgent",
    "method": "handle",
    "default_min_confidence": 0.25,
    "input": {
      "message": "string"
    },
    "output": {
      "type": "object",
      "fields": [
        "status",
        "count",
        "items",
        "message"
      ]
    }
  }
}
